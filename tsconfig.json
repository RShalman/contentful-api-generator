{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "es2021"
    ],
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
