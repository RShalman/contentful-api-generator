{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "es2021"
    ],
    //    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  //  "include": [
  //    "src/**/*"
  //  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
